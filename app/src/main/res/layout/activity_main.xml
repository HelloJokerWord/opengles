<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_change_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变位置" />

        <Button
            android:id="@+id/btn_change_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="改变大小" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_change">

        <Button
            android:id="@+id/btn_shape_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三角形" />

        <Button
            android:id="@+id/btn_shape_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方形" />

        <Button
            android:id="@+id/btn_shape_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆形" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>